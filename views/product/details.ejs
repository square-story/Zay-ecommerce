<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %></title>
    <style>
        .product-images img {
            width: 200px;
            height: auto;
            margin-right: 10px;
            cursor: pointer;
        }
        .product-main-image img {
            width: 500px;
            height: auto;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/">Home</a> / <%= product.category.name %> / <%= product.name %>
    </nav>
    <h1><%= product.name %></h1>
    <div class="product-main-image">
        <img src="/images/products/<%= product.images[0] %>" alt="<%= product.name %>">
    </div>
    <div class="product-images">
        <% product.images.forEach((image, index) => { %>
            <img src="/images/products/<%= image %>" alt="<%= product.name %> Image <%= index + 1 %>">
        <% }) %>
    </div>
    <p><strong>Price:</strong> $<%= product.price %></p>
    <p><strong>Stock:</strong> <%= product.stock %> available</p>
    <p><strong>Ratings:</strong> <%= product.ratings %> / 5</p>
    <p><strong>Reviews:</strong></p>
    <ul>
        <% product.reviews.forEach(review => { %>
            <li><%= review %></li>
        <% }) %>
    </ul>
    <h2>Related Products</h2>
    <ul>
        <% relatedProducts.forEach(relatedProduct => { %>
            <li>
                <a href="/product/<%= relatedProduct._id %>">
                    <img src="/images/products/<%= relatedProduct.images[0] %>" alt="<%= relatedProduct.name %>">
                    <%= relatedProduct.name %>
                </a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
